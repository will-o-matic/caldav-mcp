{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/mcp",
      "methods": ["GET", "POST", "DELETE"],
      "dest": "/api/mcp"
    },
    {
      "src": "/(.*)",
      "dest": "/api/$1"
    }
  ]
} 